@model Svr.Web.Models.InstanceViewModels.IndexViewModel

@{
    ViewData["Title"] = $"Список инстанций для {Model.Claim.Name}";
}

<h4>@ViewData["Title"]</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<p>
    <a asp-action="Details" asp-controller="Claims" asp-route-id="@Model.Claim.Id" class="btn btn-default">Назад к @Model.Claim.Name</a>
    @if (Model.ItemViewModels.Count() < 4)
    {
        <a asp-action="Create" asp-controller="Instances" asp-route-owner="@Model.Claim.Id" class="btn btn-default">Добавить</a>
    }
</p>

@await Html.PartialAsync("List", Model)

