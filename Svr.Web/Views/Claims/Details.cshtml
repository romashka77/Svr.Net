@using Svr.Core.Entities
@model Svr.Web.Models.ClaimsViewModels.ItemViewModel
@{
    ViewData["Title"] = $"Подробности {Model.Name}";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model</h4>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Редактировать</a>
        <a asp-action="Index" class="btn btn-default">Назад</a>
    </div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedOnUtc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedOnUtc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UpdatedOnUtc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedOnUtc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd>
            <a asp-controller="Regions" asp-action="Details" asp-route-id="@Model.Region.Id">@Model.Region.Name</a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.District)
        </dt>
        <dd>
            <a asp-controller="Districts" asp-action="Details" asp-route-id="@Model.District.Id">@Model.District.Name</a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Instances)
        </dt>
        <dd>
            <a asp-controller="Instances" asp-action="Index" asp-route-owner="@Model.Id" class="btn btn-default">Список инстанций</a>
            <hr />
            @*@if (Model.Instances.Count < 4)
            {
                <a asp-controller="Instances" asp-action="Create" asp-route-owner="@Model.Id">Добавить инстанцию</a>
                <hr />
            }*@
            @foreach (var item in Model.Instances)
            {
                <a asp-controller="Instances" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                <hr />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Редактировать</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-default">Удалить</a>
    <a asp-action="Index" class="btn btn-default">Назад</a>
</div>
