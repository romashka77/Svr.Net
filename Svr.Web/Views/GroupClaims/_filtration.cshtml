@model Svr.Web.Models.GroupClaimsViewModels.FilterViewModel
<form method="get">
    <div class="form-group form-inline">
        <label class="control-label">Поиск: </label>
        @Html.TextBox("name", Model.SelectedName, htmlAttributes: new { @class = "form-control" })
        <label class="control-label">Регион: </label>
        @Html.DropDownList("categoryDispute", Model.CategoryDisputes as SelectList,
                htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>